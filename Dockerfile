# Dockerfile
FROM python:3.9-slim

WORKDIR /app

# Копируем код HTTP-сервера в контейнер
COPY server.py .

# Устанавливаем зависимости (не требуется для этого примера)

# Открываем порт 8000 для внешних соединений
EXPOSE 8000

# Запускаем HTTP-сервер при запуске контейнера
CMD ["python", "./server.py"]
